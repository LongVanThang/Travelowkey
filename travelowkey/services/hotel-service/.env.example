# Server Configuration
PORT=3002
NODE_ENV=development
API_BASE_URL=http://localhost:3002

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_TLS=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_USERNAME=
KAFKA_PASSWORD=
KAFKA_SSL=false

# External APIs
BOOKING_COM_API_URL=https://api.booking.com
BOOKING_COM_API_KEY=your-booking-com-api-key
EXPEDIA_API_URL=https://api.expedia.com
EXPEDIA_API_KEY=your-expedia-api-key
AMADEUS_API_URL=https://api.amadeus.com
AMADEUS_API_KEY=your-amadeus-api-key

# Logging
LOG_LEVEL=info

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Caching
CACHE_DEFAULT_TTL=3600
CACHE_SEARCH_TTL=900

# Database
DB_CONNECTION_TIMEOUT=10000
DB_QUERY_TIMEOUT=30000

# Health Checks
HEALTH_CHECK_INTERVAL=30000